
<div>
  <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <div class="form-group">
      <label for="message_name" class="control-label col-md-1">名前:</label>
      <div class="col-md-8">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <label for="message_body" class="control-label col-md-1">内容:</label>
      <div class="col-md-8">
        <%= f.text_area :body, class:"form-control", rows:"3" %>
      </div>

      <div class="col-md-10">
　      <%= f.submit class: "btn btn-sm btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>



<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
  <% @messages.reverse_each do |message| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title"><%= message.created_at %> : <%= message.name %></h4>
      </div>
      <div class="panel-body">
        <%= message.body %>
      </div>
    </div>
    <% end %>
  </div>
</div>
